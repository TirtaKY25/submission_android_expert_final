<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_background">
        <item name="android:backgroundTint">@color/s40</item>
    </style>

    <style name="restaurant_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="restaurant_location">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableStartCompat">@drawable/baseline_location_pin_24</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="restaurant_rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableStartCompat">@drawable/baseline_star_24</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableTint">@color/yellow</item>
    </style>

    <style name="restaurant_description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>